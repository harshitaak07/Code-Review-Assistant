{
  "name": "code-review-assistant",
  "displayName": "Code Review Assistant",
  "description": "VS Code extension for line-level code review with severity highlights",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onSaveTextDocument",
    "onCommand:codeReviewAssistant.reviewCode"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -watch"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.5.1",
    "@types/vscode": "^1.105.0"
  },
  "dependencies": {
    "axios": "^1.7.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "codeReviewAssistant.reviewCode",
        "title": "Run Code Review"
      }
    ]
  }
}
